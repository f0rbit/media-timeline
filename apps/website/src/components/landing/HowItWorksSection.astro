---
import HowItWorks from "../solid/HowItWorks";
---

<HowItWorks client:load />

<style is:global>
	.how-it-works-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 24px;
		margin-top: 5rem;
	}

	.how-it-works-section h2 {
		text-align: center;
	}

	/* Ensure stepper is centered and constrained */
	.how-it-works-section .stepper {
		max-width: 800px;
		width: 100%;
	}

	@media (max-width: 768px) {
		.how-it-works-section .stepper {
			max-width: 400px;
		}
	}
</style>
