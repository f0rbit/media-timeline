{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"@media-timeline/core": ["./packages/core/src/index.ts"],
			"@media-timeline/providers": ["./packages/providers/src/index.ts"],
			"@media-timeline/schema": ["./packages/schema/src/index.ts"],
			"@media-timeline/schema/database": ["./packages/schema/src/database.ts"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
