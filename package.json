{
	"name": "media-timeline",
	"private": true,
	"type": "module",
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"dev": "bun run --filter @media-timeline/website dev",
		"dev:app": "bun run --cwd apps/website dev",
		"dev:api": "bun run scripts/dev-server.ts",
		"dev:all": "concurrently -n api,app -c blue,green \"bun dev:api\" \"bun dev:app\"",
		"build": "bun run scripts/build-unified.ts",
		"build:astro": "bun run --cwd apps/website build",
		"build:server": "bun build src/worker.ts --outdir dist --target browser",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "DATABASE_URL=./local/sqlite.db drizzle-kit migrate",
		"db:seed": "bun run scripts/seed.ts",
		"db:reset": "DATABASE_URL=./local/sqlite.db drizzle-kit push && bun run db:seed",
		"deploy:preview": "bun run build && wrangler deploy --env preview",
		"deploy:production": "bun run build && wrangler deploy"
	},
	"dependencies": {
		"@f0rbit/corpus": "0.3.1",
		"@xdevplatform/xdk": "^0.3.0",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.7",
		"octokit": "^5.0.5",
		"zod": "3.24.3"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251205.0",
		"@types/bun": "latest",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.8",
		"typescript": "^5.9.3",
		"@biomejs/biome": "^1.9.4",
		"wrangler": "^3.114.15"
	}
}
