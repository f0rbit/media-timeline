{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": ["node_modules", "local", "dist", ".astro", ".sst", "bun.lock"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 240
	},
	"javascript": {
		"formatter": {
			"bracketSameLine": false,
			"semicolons": "always",
			"quoteStyle": "double",
			"trailingCommas": "es5",
			"bracketSpacing": true,
			"arrowParentheses": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"noLabelWithoutControl": "off"
			}
		}
	}
}
