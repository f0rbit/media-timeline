---
import AppLayout from "../layouts/AppLayout.astro";
import HeroSection from "../components/landing/HeroSection.astro";
import FeaturesSection from "../components/landing/FeaturesSection.astro";
import HowItWorksSection from "../components/landing/HowItWorksSection.astro";
import TimelinePreviewSection from "../components/landing/TimelinePreviewSection.astro";
import CTASection from "../components/landing/CTASection.astro";

const structuredData = {
	"@context": "https://schema.org",
	"@type": "SoftwareApplication",
	"name": "Media Timeline",
	"applicationCategory": "DeveloperApplication",
	"operatingSystem": "Web",
	"description": "Aggregate activity from GitHub, Reddit, Twitter, Bluesky, and YouTube into a unified timeline.",
	"offers": {
		"@type": "Offer",
		"price": "0",
		"priceCurrency": "USD"
	},
	"featureList": [
		"Unified Timeline",
		"GitHub Integration",
		"Reddit Integration",
		"Twitter Integration",
		"YouTube Integration",
		"Bluesky Integration",
		"Privacy-first Design"
	]
};
---

<AppLayout 
	title="Media Timeline - Aggregate Your Activity Across Platforms"
	description="Unify your digital footprint. Aggregate GitHub commits, Reddit posts, tweets, and more into a single, beautiful timeline. Privacy-first and self-hostable."
	ogImage="/og/landing.png"
>
	<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
	<HeroSection />
	<FeaturesSection />
	<HowItWorksSection />
	<TimelinePreviewSection />
	<CTASection />
</AppLayout>

<style is:global>
	@import "../styles/landing.css";
</style>
