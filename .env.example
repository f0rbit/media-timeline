# Media Timeline - Environment Variables
# Copy this file to .env and fill in your values

# Reddit OAuth (required for Reddit integration)
# Create an app at: https://www.reddit.com/prefs/apps
# Set redirect URI to: {API_URL}/api/auth/reddit/callback
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# Twitter/X OAuth (required for Twitter integration)
# Create an app at: https://developer.twitter.com/en/portal/dashboard
# Note: Requires Basic API tier ($100/month) for user tweet access
# Set callback URL to: {API_URL}/api/auth/twitter/callback
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# GitHub OAuth (required for GitHub integration)
# Create an OAuth App at: https://github.com/settings/developers
# Set callback URL to: {API_URL}/api/auth/github/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# URLs
API_URL=http://localhost:8787
FRONTEND_URL=http://localhost:4321

# Devpad API (for authentication)
# Optional - defaults to https://devpad.tools
DEVPAD_URL=https://devpad.tools

# Encryption key for secure token storage (32 bytes)
# For production: set via `wrangler secret put ENCRYPTION_KEY`
# For local dev: The dev server generates a key automatically
