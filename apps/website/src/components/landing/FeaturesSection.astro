---
type Feature = {
	icon: "clock" | "users" | "shield";
	title: string;
	description: string;
};

const FEATURES: Feature[] = [
	{
		icon: "clock",
		title: "Unified Timeline",
		description: "Group commits by repository. See your posts, tweets, and videos in one chronological stream.",
	},
	{
		icon: "users",
		title: "Team Sharing",
		description: "Share connected accounts with teammates. Role-based access keeps everyone on the same page.",
	},
	{
		icon: "shield",
		title: "Privacy-first",
		description: "AES-256 encrypted tokens. Self-hosted deployment. Your data never leaves your control.",
	},
];
---

<section class="features-section">
	<h2>Why Media Timeline</h2>
	<div class="feature-grid">
		{FEATURES.map((feature) => (
			<div class="card feature-card">
				<div class="feature-header">
					<div class="feature-icon">
						{feature.icon === "clock" && (
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<circle cx="12" cy="12" r="10" />
								<polyline points="12 6 12 12 16 14" />
							</svg>
						)}
						{feature.icon === "users" && (
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
								<circle cx="9" cy="7" r="4" />
								<path d="M22 21v-2a4 4 0 0 0-3-3.87" />
								<path d="M16 3.13a4 4 0 0 1 0 7.75" />
							</svg>
						)}
						{feature.icon === "shield" && (
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z" />
							</svg>
						)}
					</div>
					<span class="feature-title">{feature.title}</span>
				</div>
				<p class="feature-description description">{feature.description}</p>
			</div>
		))}
	</div>
</section>

<style>
	.features-section {
		display: flex;
		flex-direction: column;
		gap: 16px;
		margin-top: 5rem;
	}

	.features-section h2 {
		text-align: center;
	}

	.feature-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 16px;
	}

	.feature-card {
		display: flex;
		flex-direction: column;
		gap: 8px;
		padding: 12px;
		box-shadow: none;
	}

	.feature-header {
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.feature-icon {
		color: var(--text-muted);
		flex-shrink: 0;
	}

	.feature-title {
		color: var(--text-primary);
		font-weight: 500;
	}

	.feature-description {
		font-size: 0.875rem;
		line-height: 1.5;
	}

	@media (max-width: 768px) {
		.feature-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
