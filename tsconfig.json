{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"types": ["@cloudflare/workers-types", "bun"],
		"baseUrl": ".",
		"paths": {
			"@media/schema": ["./packages/schema/src/index.ts"],
			"@media/schema/*": ["./packages/schema/src/*"],
			"@media/server": ["./packages/server/src/index.ts"],
			"@media/server/*": ["./packages/server/src/*"]
		}
	},
	"include": ["src/**/*", "packages/**/*", "__tests__/**/*"],
	"exclude": ["node_modules", ".sst"]
}
