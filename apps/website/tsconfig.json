{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@schema/*": ["../../src/schema/*"],
			"@media/schema": ["../../packages/schema/src/index.ts"],
			"@media/schema/*": ["../../packages/schema/src/*"],
			"@media/server": ["../../packages/server/src/index.ts"],
			"@media/server/*": ["../../packages/server/src/*"]
		},
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"include": ["src/**/*", "env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
