{
	"name": "media-timeline",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run --filter='./packages/*' build",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:all": "bun run test && bun run --filter='./packages/*' test",
		"typecheck": "bun run --filter='./packages/*' typecheck",
		"dev": "bun run --filter=@media-timeline/worker dev"
	},
	"dependencies": {
		"@f0rbit/corpus": "^0.1.2",
		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"hono": "^4.6.0",
		"typescript": "^5.7.2"
	}
}
