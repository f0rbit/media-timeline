datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  customers     Client[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Client {
  id         String   @id @default(uuid())
  name       String
  user_id    String?
  user       User?    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  server    ClientServer? @relation(fields: [server_id], references: [id])
  server_id String?       @unique

  integrations Integration[]
}

model Integration {
  client_id    String
  platform     Platform
  data         Json
  enabled      Boolean   @default(true)
  client       Client?   @relation(fields: [client_id], references: [id])
  created_at   DateTime  @default(now())
  total_posts  Int       @default(0)
  last_fetched DateTime?

  @@unique([client_id, platform])
}

model ClientServer {
  id         String         @id @default(uuid())
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt
  metrics    MetricRecord[]

  client Client?

  cluster      ServerCluster @relation(fields: [cluster_name], references: [name])
  cluster_name String
}

model MetricRecord {
  id              String   @id @default(uuid())
  created_at      DateTime @default(now())
  request_url     String
  response_code   Int
  response_time   Int
  request_address String
  request_region  String

  server    ClientServer? @relation(fields: [server_id], references: [id])
  server_id String?
}

model ServerCluster {
  name       String   @unique
  ipv4       String
  ipv6       String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  servers ClientServer[]
}

enum Platform {
  TWITTER
  REDDIT
  GITHUB
}
