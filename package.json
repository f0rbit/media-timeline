{
	"name": "media-timeline",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"dev": "bun run --filter @media-timeline/website dev",
		"dev:app": "bun run --cwd apps/website dev",
		"dev:api": "bun run scripts/dev-server.ts",
		"dev:all": "concurrently -n api,app -c blue,green \"bun dev:api\" \"bun dev:app\"",
		"dev:sst": "sst dev",
		"build": "bun run --filter @media-timeline/website build",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@f0rbit/corpus": "^0.2.0",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.7",
		"octokit": "^5.0.5",
		"sst": "^3.17.25",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251205.0",
		"@types/bun": "latest",
		"concurrently": "^9.2.1",
		"typescript": "^5.9.3",
		"wrangler": "^3.114.15"
	}
}
